<SubmissionDialog>:
    size_hint: (None, None)
    size: dp(284), dp(120)+dp(195)
    elevation: 10
    pos_hint: {'center_x': .5, 'center_y': .67}
    auto_dismiss: True
    background: ""
    background_normal: ""
    canvas:
        Color:
            rgb: app.theme_cls.primary_color
        Rectangle:
            size: self.width, dp(60)
            pos: root.pos[0], root.pos[1] + root.height-dp(60)
        Color:
            rgb: app.theme_cls.bg_normal
        Rectangle:
            size: self.width, dp(255)
            pos: root.pos[0], root.pos[1] + root.height-(dp(120)+dp(195))

    MDFlatButton:
        width: dp(32)
        id: ok_button
        pos:
            root.pos[0] + (root.size[0] - self.width)/2., root.pos[1] + dp(10)
        text: "Submit"
        on_release: root.ok_click(name_field.text, location_field.text, message_field.text)

    #MDFlatButton:
    #    id: cancel_button
    #    pos: root.pos[0] + root.size[0] - self.width - ok_button.width - dp(10), root.pos[1] + dp(10)
    #    text: "Cancel"
    #    on_release: root.dismiss()

    MDTextField:
        id: name_field
        size_hint: (None, None)
        hint_text: "Your Name"
        helper_text: "Anonymous if left blank"
        helper_text_mode: 'on_focus'
        text: ""
        size: dp(250), dp(60)
        pos: root.pos[0] + (root.size[0]-self.size[0])/2.0, root.pos[1] + root.height - dp(60) - dp(60) - dp(5)

    MDTextField:
        id: location_field
        size_hint: (None, None)
        hint_text: "Your Location"
        helper_text: "Anonymous if left blank"
        helper_text_mode: 'on_focus'
        text: ""
        size: dp(250), dp(60)
        pos: root.pos[0] + (root.size[0]-self.size[0])/2.0, root.pos[1] + root.height - dp(60) - dp(60) - dp(5) - dp(60) - dp(5)

    MDTextField:
        id: message_field
        size_hint: (None, None)
        hint_text: "Your Message"
        helper_text: "Be kind!"
        helper_text_mode: 'on_focus'
        size: dp(250), dp(100)
        multiline: True
        pos: root.pos[0] + (root.size[0]-self.size[0])/2.0, root.pos[1] + ok_button.size[1] + dp(5)#+ root.height - dp(60) - dp(60) - dp(10) - dp(60) - dp(10) - dp(100) - dp(5)

    MDLabel:
        font_style: "H6"
        text: "What do you want to say?"
        size_hint: (None, None)
        size: dp(250), dp(50)
        pos_hint: {'center_x': .5, 'center_y': .925}
        theme_text_color: 'Custom'
        text_color: root.specific_text_color
